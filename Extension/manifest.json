{
    "name": "Search Bar",
    "description": "A slightly better option than the Google Chromeâ€™s default Find Bar.",
    "version": "0.1",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "Popup/popup.html",
        "default_icon": "Popup/popup.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+S",
                "windows": "Alt+S",
                "mac": "Alt+S"
            },
            "description": "Opens popup.html"
        }
    }
}