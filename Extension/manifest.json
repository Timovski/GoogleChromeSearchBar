{
    "name": "Search Bar",
    "short_name": "Search Bar",
    "description": "A slightly better option than the Google Chromeâ€™s default Find Bar.",
    "version": "0.5",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "style.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "Popup/popup.html",
        "default_icon": {
            "16": "Images/icon16.png",
            "32": "Images/icon32.png",
            "48": "Images/icon48.png",
            "128": "Images/icon128.png"
        }
    },
    "icons": {
        "16": "Images/icon16.png",
        "32": "Images/icon32.png",
        "48": "Images/icon48.png",
        "128": "Images/icon128.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+S",
                "windows": "Alt+S",
                "mac": "Alt+S"
            },
            "description": "Opens popup.html"
        }
    }
}