{
    "name": "Search Bar",
    "description": "A slightly better option than the Google Chromeâ€™s default Find Bar.",
    "version": "0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "Popup/popup.html",
        "default_icon": "Popup/popup.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens popup.html"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}